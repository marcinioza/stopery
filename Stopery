      <footer>
    <p>5-ciobój przeglądarkowy</p>
</footer>
<body>
    
    
  
	<h1>Stoper</h1>
	<div id="stoper-container"></div>
    
	<div id="stoper-container"></div>

	<script>
		const stoperContainer = document.getElementById("stoper-container");

		for (let i = 1; i <= 16; i++) {
			const stoperDiv = document.createElement("div");
			const header = document.createElement("h2");
			const timer = document.createElement("span");
			const startButton = document.createElement("button");
			const pauseButton = document.createElement("button");
			const resetButton = document.createElement("button");
            
            
			header.innerText = `Stoper ${i}`;
			timer.id = `timer${i}`;
			timer.innerText = "00:00:00";
			startButton.id = `start${i}`;
			startButton.innerText = "Start";
			pauseButton.id = `pause${i}`;
			pauseButton.innerText = "Pauza";
			resetButton.id = `reset${i}`;
			resetButton.innerText = "Reset";

			stoperDiv.appendChild(header);
			stoperDiv.appendChild(timer);
			stoperDiv.appendChild(startButton);
			stoperDiv.appendChild(pauseButton);
			stoperDiv.appendChild(resetButton);
			stoperContainer.appendChild(stoperDiv);

			let startTime;
			let elapsedTime = 0;
			let timerInterval;

			function startTimer() {
				startTime = Date.now() - elapsedTime;
				timerInterval = setInterval(updateTimer, 10);
				startButton.disabled = true;
				pauseButton.disabled = false;
			}

			function pauseTimer() {
				clearInterval(timerInterval);
				elapsedTime = Date.now() - startTime;
				startButton.disabled = false;
				pauseButton.disabled = true;
			}

			function resetTimer() {
				clearInterval(timerInterval);
				timer.innerHTML = "00:00:00";
				startTime = null;
				elapsedTime = 0;
				startButton.disabled = false;
				pauseButton.disabled = true;
			}

			function updateTimer() {
				let elapsedMilliseconds = Date.now() - startTime;
				let hours = Math.floor(elapsedMilliseconds / (60 * 60 * 1000));
				let minutes = Math.floor((elapsedMilliseconds % (60 * 60 * 1000)) / (60 * 1000));
				let seconds = Math.floor((elapsedMilliseconds % (60 * 1000)) / 1000);
				let milliseconds = Math.floor(elapsedMilliseconds % 1000 / 10);
				timer.innerHTML = `${formatNumber(hours)}:${formatNumber(minutes)}:${formatNumber(seconds)}:${formatNumber(milliseconds)}`;
			}

			function formatNumber(number) {
				return number.toString().padStart(2, "0");
			}

			startButton.addEventListener("click", startTimer);
			pauseButton.addEventListener("click", pauseTimer);
			resetButton.addEventListener("click", resetTimer);
		}
	</script>
</body>
